<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Create your mentor profile</h1>
  <%= simple_form_for @mprofile, url: instructor_mprofiles_path do |f| %>
    <%= f.input :first_name, input_html: { maxlength: 30 } %>
    <%= f.input :bio %>
    <%= f.input :email %>
    <%= f.input :image %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>