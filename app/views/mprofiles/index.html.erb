<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center dash-title">Our Amazing Mentors</h1>
  <hr />
    <% @mprofiles.each do |mprofile| %>
      <div class = "col-xs-12 col-sm-4 text-center">
        <div class = "block">
          <h2 class="mprofile-title">
            <%= link_to mprofile.first_name, mprofile_path(mprofile) %>
            <br />
            <br />
            <%= image_tag mprofile.image, class: 'img-responsive' %>
          </h2>
          <br class = "clr"/>
          <div class="description">
            <%= mprofile.bio %>
          </div>
          <br class = "clr" />
            <%= link_to 'View Mentor Profile', mprofile_path(mprofile), class: 'btn btn-primary btn-large'%>
        </div>
      </div>
    <% end %>
</div>